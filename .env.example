# === MySQL Credentials ===
MYSQL_ROOT_PASSWORD=your_mysql_root_password_here
MYSQL_STUDENT_DATABASE=microservice-student-db
MYSQL_ROLES_DATABASE=microservice-roles-db

# === PostgreSQL Credentials ===
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_postgres_password_here
POSTGRES_AUTH_DATABASE=microservice-auth-db
POSTGRES_COURSES_DATABASE=microservice-courses-db

# === Application Database URLs ===
# Students Service (MySQL)
STUDENTS_DB_URL=jdbc:mysql://localhost:3306/microservice-student-db
STUDENTS_DB_USERNAME=root
STUDENTS_DB_PASSWORD=your_mysql_root_password_here

# Auth Service (PostgreSQL)
AUTH_DB_URL=jdbc:postgresql://localhost:5432/microservice-auth-db
AUTH_DB_USERNAME=postgres
AUTH_DB_PASSWORD=your_postgres_password_here

# Courses Service (PostgreSQL)
COURSES_DB_URL=jdbc:postgresql://localhost:5433/microservice-courses-db
COURSES_DB_USERNAME=postgres
COURSES_DB_PASSWORD=your_postgres_password_here

# Roles Service (MySQL)
ROLES_DB_URL=jdbc:mysql://localhost:3307/microservice-roles-db
ROLES_DB_USERNAME=root
ROLES_DB_PASSWORD=your_mysql_root_password_here

# === JPA/Hibernate ===
# Options: create, create-drop, update, validate
JPA_DDL_AUTO=update

# === Server Ports ===
CONFIG_SERVER_PORT=8888
EUREKA_SERVER_PORT=8761
GATEWAY_PORT=8090
AUTH_SERVICE_PORT=8081
STUDENTS_SERVICE_PORT=8082
